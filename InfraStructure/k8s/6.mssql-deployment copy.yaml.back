apiVersion: apps/v1
kind: Deployment
metadata:
  name: mssql-deployment
  namespace: 'pro-eventos'
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mssql-deployment
  template:
    metadata:
      labels:
        app: mssql-deployment
    spec:
      containers:
      - name: mssql-container
        image: mcr.microsoft.com/mssql/server:2019-latest
        env:
          - name: "ACCEPT_EULA"
            value: "Y"
          - name: "SA_PASSWORD"
            value: "change@123"
        ports:
          - containerPort: 1433
        resources:
          requests:
            cpu: "100m"
            memory: "128Mi"
          limits:
            cpu: "300m"
            memory: "256Mi"
