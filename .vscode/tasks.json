{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Backend/src/ProEventos.API/ProEventos.API.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch integration test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "test",
                "--project",
                "${workspaceFolder}/Backend/tests/ProEventos.Tests.Integration/ProEventos.Tests.Integration.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
    ]
}
