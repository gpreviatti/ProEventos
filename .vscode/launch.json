{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dev Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Backend/src/ProEventos.API/bin/Debug/net5.0/ProEventos.API.dll",
            "cwd": "${workspaceFolder}/Backend/src/ProEventos.API",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": false
            },
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "DB_CONNECTION": "Host=localhost;Port=5432;Database=ProEventos;Username=postgres;Password=admin"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}
